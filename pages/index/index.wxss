.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  object-fit: cover;
}

.title {
  position: relative;
  z-index: 3;
  text-align: center;
  font-size: 80rpx;
  font-weight: bold;
  padding: 50rpx 0 30rpx;
  color:black;
}

.music-button {
  position: absolute;
  top: 20rpx;
  right: 120rpx;
  z-index: 3;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 69, 0, 0.8);
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.menu-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 3;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 69, 0, 0.8);
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.redNoteScore {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 20rpx;
}

.battle-grid {
  position: relative;
  z-index: 2;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  width: 90%;
  max-width: 600rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.battle {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  border: 2rpx solid #ffffff;
}

.battle-img, .cat-gif {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cat-gif {
  z-index: 2;
}

.music-info {
  position: relative;
  z-index: 3;
  margin-top: 30rpx;
  padding-left: 40rpx;
  text-align: center;
}

.music-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 0 8rpx rgba(0,0,0,0.5);
}

.music-artist {
  font-size: 24rpx;
  color: #eee;
  margin-top: 10rpx;
}

.progress-bar {
  position: relative;
  height: 8rpx;
  background-color: rgba(0,0,0,0.3);
  border-radius: 4rpx;
  margin: 20rpx 50rpx;
  width: 80%;
}

.progress {
  height: 100%;
  background-color: #ff4500;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.time {
  position: absolute;
  right: -50rpx;
  top: -15rpx;
  font-size: 20rpx;
  color: #fff;
}

.menu-popup {
  position: fixed;
  top: 15%;
  left: 15%;
  width: 70%;
  height: 70%;
  background-color: rgba(255, 255, 255, 0.95);
  z-index: 100;
  border-radius: 20rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.3);
  padding: 30rpx;
  overflow: hidden;
}

.close-button {
  position: absolute;
  top: 15rpx;        /* 距离顶部的距离 */
  left: 15rpx;       /* 修改为 left 以固定在左上角 */
  width: 40rpx;      /* 增大按钮尺寸 */
  height: 40rpx;     /* 与宽度保持一致以形成圆形 */
  background-color: rgba(255, 69, 0, 0.8);
  color: white;
  border-radius: 20rpx;  /* 半径为宽度的一半 */
  font-size: 32rpx;      /* 增大字体以便显示 "×" */
  border: none;
  outline: none;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;        /* 确保文字垂直居中 */
}

.menu-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.music-list {
  height: calc(100% - 80rpx);
  overflow-y: auto;
}

.music-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.music-item.active {
  color: #ff4500;
  font-weight: bold;
}