.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  object-fit: cover;
}

.redNoteScore {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
}

.title {
  position: relative;
  z-index: 3;
  text-align: center;
  font-weight: bold;
  padding: 50rpx 0 30rpx;
  color: black;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
}

.cat-TV{
  font-size: 80rpx;
}

.haha{
  font-size: 40rpx;
}

.battle-grid {
  position: relative;
  z-index: 2;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  width: 90%;
  max-width: 600rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.battle {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  border: 2rpx solid #ffffff;
  transition: transform 0.2s ease-in-out;
}


.battle-img, .cat-gif {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cat-gif {
  z-index: 2;
}

@media (max-width: 750rpx) {
  .battle-grid {
    gap: 15rpx;
    padding: 20rpx;
    margin-top: 20rpx;
  }

  .redNoteScore {
    font-size: 24rpx;
    padding: 10rpx 20rpx;
  }

  .title {
    font-size: 36rpx;
    padding: 40rpx 0 25rpx;
  }
}

.music-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 3;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 69, 0, 0.8);
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.music-button-hover {
  background-color: rgba(255, 69, 0, 1);
  transform: scale(1.05);
}